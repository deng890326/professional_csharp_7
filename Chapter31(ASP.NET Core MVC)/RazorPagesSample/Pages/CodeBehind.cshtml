@page
@model RazorPagesSample.Pages.CodeBehindModel
@{
    ViewData["Title"] = "Code Behind";
}

<h2>Code Behind Razor Page Sample</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Publisher</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books.OrderBy(b => b.Title))
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Publisher</td>
            </tr>
        }
    </tbody>
</table>

<div>@Model.Message</div>

<form method="post">
    Enter a new book
    <br />
    <input asp-for="EditingBook.Title" />
    <br />
    <input asp-for="EditingBook.Publisher" />
    <br />
    <button type="submit">Submit</button>
</form>
